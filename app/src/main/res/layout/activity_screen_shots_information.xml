<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ScreenShotsInformationActivity" android:orientation="vertical"
        android:gravity="center">

    <TextView
            android:text="@string/number_of_screenshots_taken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/taken_screen_shots_counter_text_view"
            android:text="@string/default_number_of_photos_taken"/>
    <TextView
            android:text="Available screen shots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:paddingLeft="10dp"/>
    <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_grid_view"
            android:numColumns="auto_fit"
            android:columnWidth="90dp"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:gravity="center"

    />
</LinearLayout>