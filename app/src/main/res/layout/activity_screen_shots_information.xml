<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ScreenShotsInformationActivity" android:orientation="vertical" android:gravity="center">

    <TextView
            android:text="@string/number_of_screenshots_taken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/taken_screen_shots_text_view"
            android:text="@string/default_number_of_photos_taken"/>
    <Button
            android:text="@string/show_screen_shots_directory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button" android:layout_marginTop="30dp"/>
</LinearLayout>